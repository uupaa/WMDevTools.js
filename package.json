{
  "name":           "uupaa.wmdevelop.js",
  "version":        "0.0.1",
  "description":    "development functions.",
  "url":            "https://github.com/uupaa/WMDevelop.js",
  "keywords":       ["uupaa", "WebModule", "Unstable"],
  "repository": {
    "type":         "git",
    "url":          "https://github.com/uupaa/WMDevelop.js.git"
  },
  "scripts": {
    "update":           "npm update; npm run build; npm run make.page",
    "sync":             "node ../WebModule/run/sync.package.json.scripts.js",
    "add":              "node ../WebModule/run/add.module.js",
    "remove":           "node ../WebModule/run/remove.module.js",
    "watch":            "node ../WebModule/run/watch.js --verbose --action build",
    "build":            "node ../WebModule/run/build.js --verbose --strict --keep --pretty",
    "build.simple":     "node ../WebModule/run/build.js --verbose --strict --keep --pretty --nowrap --simple",
    "build.release":    "node ../WebModule/run/build.js --verbose --strict --module",
    "test":             "npm stop; npm run build; npm start; npm run node; npm run browser; npm run ios; npm stop",
    "make.page":        "node ../WebModule/run/make.index.html.js --verbose",
    "node":             "NODE_ENV=production NODE_PATH=lib node --harmony test/index.node.js",
    "node.debug":       "NODE_ENV=production NODE_PATH=lib node --debug-brk --harmony test/index.node.js",
    "browser":          "open http://localhost:8000/WMDevelop.js/test/index.html",
    "ios":              "node ../WebModule/run/ios.open.js http://localhost:8000/WMDevelop.js/test/index.html",
    "hint":             "jshint lib/*.js",
    "score":            "node ../WebModule/run/score.js; open lint/plato/index.html",
    "patch":            "node ../WebModule/run/patch.js",
    "start":            "cd ../; Python -m SimpleHTTPServer 8000 &",
    "stop":             "killall -- Python -m SimpleHTTPServer 8000",
    "ios.start":        "node ../WebModule/run/ios.start.js",
    "ios.stop":         "node ../WebModule/run/ios.stop.js"
  },
  "x-build": {
    "source":       ["lib/WMDevelop.js"],
    "output":       "release/WMDevelop.min.js",
    "target":       ["all"],
    "label":        ["@dev"],
    "module": {
      "develop":    ["uupaa.valid.js"],
      "release":    []
    }
  },
  "dependencies": {
    "uupaa.console.js": "",
    "uupaa.valid.js":   "",
    "uupaa.help.js":    "",
    "uupaa.task.js":    "",
    "uupaa.test.js":    ""
  },
  "devDependencies": {
  },
  "lib":            "./lib/",
  "main":           "./index.js",
  "author":         "uupaa",
  "license":        "MIT",
  "contributors":   []
}
